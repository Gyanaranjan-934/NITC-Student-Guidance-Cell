<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".admin.AddMentorFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/headingTVInAddMentorFragment"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Add Mentor"
        android:textSize="30dp">

    </com.google.android.material.textview.MaterialTextView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addMentorCardInAddMentorFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        app:cardBackgroundColor="#6A2962FF"
        app:cardCornerRadius="10dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addMentorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="30">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/nameInputLayoutInAddMentorFragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintWidth_percent="0.88"
                app:layout_constraintVertical_bias="0.07"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:boxBackgroundColor="#E6FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameFieldInAddMentorFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/phoneAndTypeLayoutInAddMentorFragment"
                app:layout_constraintStart_toStartOf="@id/nameInputLayoutInAddMentorFragment"
                app:layout_constraintEnd_toEndOf="@id/nameInputLayoutInAddMentorFragment"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintTop_toBottomOf="@id/nameInputLayoutInAddMentorFragment"
                app:layout_constraintVertical_bias="0.05"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    app:boxBackgroundColor="#E6FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneNumberInAddMentorFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mentorTypeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    app:cornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Type"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    app:backgroundTint="#2962FF" />
            </LinearLayout>




                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="@id/nameInputLayoutInAddMentorFragment"
                    app:layout_constraintEnd_toEndOf="@id/nameInputLayoutInAddMentorFragment"
                    app:layout_constraintHeight_percent="0.1"
                    android:id="@+id/emailInputLayoutInAddMentorFragment"
                    app:layout_constraintTop_toBottomOf="@id/phoneAndTypeLayoutInAddMentorFragment"
                    app:layout_constraintVertical_bias="0.07"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_weight="9">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailFieldInAddMentorFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/passwordInputLayoutInAddMentorFragment"
                app:layout_constraintStart_toStartOf="@id/nameInputLayoutInAddMentorFragment"
                app:layout_constraintEnd_toEndOf="@id/nameInputLayoutInAddMentorFragment"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintTop_toBottomOf="@id/emailInputLayoutInAddMentorFragment"
                app:layout_constraintVertical_bias="0.08"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_weight="4"
                app:boxBackgroundColor="#E6FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordFieldInAddMentorFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addButtonInAddMentorFragment"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/nameInputLayoutInAddMentorFragment"
                    app:layout_constraintEnd_toEndOf="@id/nameInputLayoutInAddMentorFragment"
                    app:layout_constraintTop_toBottomOf="@id/passwordInputLayoutInAddMentorFragment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.09"
                    android:backgroundTint="@color/lavender"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Add"
                    android:textColor="@color/black"
                    app:layout_constraintWidth_percent="0.7"
                    android:textAllCaps="false"
                    app:cornerRadius="15dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>