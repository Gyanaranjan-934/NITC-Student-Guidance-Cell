<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    android:padding="10dp"
    tools:context="Login.LoginFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Sign In"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginCardInLoginFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:cardElevation="0dp"
        android:weightSum="20"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginLayoutInLoginFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E9F3FF"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="20">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/loginTypeCardInLoginFragment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.1"
                    app:cardElevation="0dp"
                    app:layout_constraintVertical_bias="0.03"
                    app:layout_constraintWidth_percent="0.97"
                    app:cardCornerRadius="25dp">
                
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/adminLoginTypeImageInLoginFragment"
                                android:background="@drawable/login_type_card_transparent_bg"/>

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Admin"
                                android:id="@+id/adminLoginTypeButtonInLoginFragment"
                                android:textAllCaps="false"
                                android:backgroundTint="#00000000"
                                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                                android:textColor="@color/black"
                                android:letterSpacing="0"
                                android:fontFamily="@font/inter_semibold"/>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/studentLoginTypeImageInLoginFragment"
                                android:background="@drawable/login_type_card_blue_bg"/>

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Student"
                                android:id="@+id/studentLoginTypeButtonInLoginFragment"
                                android:textAllCaps="false"
                                android:backgroundTint="#00000000"
                                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                                android:textColor="@color/white"
                                android:letterSpacing="0"
                                android:fontFamily="@font/inter_semibold"/>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/mentorLoginTypeImageInLoginFragment"
                                android:background="@drawable/login_type_card_transparent_bg"/>

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Mentor"
                                android:id="@+id/mentorLoginTypeButtonInLoginFragment"
                                android:textAllCaps="false"
                                android:backgroundTint="#00000000"
                                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                                android:textColor="@color/black"
                                android:letterSpacing="0"
                                android:fontFamily="@font/inter_semibold"/>


                        </com.google.android.material.card.MaterialCardView>



                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/loginTypeCardInLoginFragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:textAllCaps="false"
                android:visibility="gone"
                android:text="Type"
                android:id="@+id/mentorTypeButtonInLoginFragment"
                app:cornerRadius="25dp"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHeight_percent="0.1"
                android:backgroundTint="@color/sky_blue"
                android:textColor="@color/black"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/emailInputLayoutInLoginFragment"
                app:layout_constraintTop_toBottomOf="@id/mentorTypeButtonInLoginFragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.13"
                app:layout_constraintVertical_bias="0.15"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/black"
                android:hint="Email"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.85"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_weight="3"
                android:textColorHint="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/emailInputLayoutInLoginFragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintHeight_percent="0.13"
                android:id="@+id/passwordInputLayoutInLoginFragment"
                app:boxStrokeWidth="0.5dp"
                app:hintTextColor="@color/black"
                app:boxBackgroundColor="@color/white"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/emailInputLayoutInLoginFragment"
                app:layout_constraintEnd_toEndOf="@id/emailInputLayoutInLoginFragment"
                app:layout_constraintWidth_percent="0.85"
                app:endIconCheckable="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/passwordInputLayoutInLoginFragment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/forgotPasswordButtonInLoginFragment"
                    app:layout_constraintVertical_bias="0.05"
                    app:layout_constraintHorizontal_bias="0.95"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:backgroundTint="#00000000"
                    android:text="Forgot Password ?"
                    android:textAllCaps="false"
                    android:textColor="#673AB7"
                    app:cornerRadius="10dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/signInButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cornerRadius="15dp"
                android:layout_weight="3"
                android:fontFamily="@font/inter_semibold"
                app:layout_constraintTop_toBottomOf="@id/forgotPasswordButtonInLoginFragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.12"
                app:layout_constraintVertical_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"
                android:text="Login"
                android:textColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:fontFamily="@font/inter_semibold"
        android:textAllCaps="false"
        android:letterSpacing="0.03"
        app:cornerRadius="10dp"
        android:text="Register instead"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHorizontal_bias="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/loginCardInLoginFragment"
        app:layout_constraintTop_toBottomOf="@+id/loginCardInLoginFragment"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>