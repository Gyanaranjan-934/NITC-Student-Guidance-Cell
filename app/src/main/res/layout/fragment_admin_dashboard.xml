<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baby_blue"
    tools:context=".admin.AdminDashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/viewTypeCardInAdminDashboardFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:cardElevation="0dp"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintWidth_percent="0.77"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00000000"
            android:background="#00000000"
            android:weightSum="2"
            android:orientation="horizontal">



            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/studentLoginTypeImageInAdminDashboardFragment"
                    android:background="@drawable/login_type_card_blue_bg"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Student"
                    android:id="@+id/studentLoginTypeButtonInAdminDashboardFragment"
                    android:textAllCaps="false"
                    android:backgroundTint="#00000000"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:textColor="@color/white"
                    android:letterSpacing="0"
                    android:fontFamily="@font/inter_semibold"/>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mentorLoginTypeImageInAdminDashboardFragment"
                    android:background="@drawable/login_type_card_transparent_bg"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mentor"
                    android:id="@+id/mentorLoginTypeButtonInAdminDashboardFragment"
                    android:textAllCaps="false"
                    android:backgroundTint="#00000000"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:textColor="@color/black"
                    android:letterSpacing="0"
                    android:fontFamily="@font/inter_semibold"/>


            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:id="@+id/mentorLayoutInAdminDashboardFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTypeCardInAdminDashboardFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mentorRecyclerViewInAdminDashboardFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:text="No Mentors found"
            android:id="@+id/noMentorsTVInAdminDashboardFragment"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/addMentorButtonInAdminDashboard"
            android:text="Add Mentor"
            android:textAllCaps="false"
            android:backgroundTint="@color/lavender"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.99"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/studentLayoutInAdminDashboardFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTypeCardInAdminDashboardFragment">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:text="No Students found"
            android:id="@+id/noStudentsTVInAdminDashboardFragment"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/studentRecyclerViewInAdminDashboardFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/addStudentButtonInAdminDashboard"
            android:text="Add Student"
            android:textAllCaps="false"
            android:backgroundTint="@color/lavender"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.99"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>