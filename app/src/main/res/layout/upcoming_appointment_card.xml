<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/lavender">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageInUpcomingAppointmentCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/boy_face"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.37"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.301"
            app:layout_constraintWidth_percent="0.2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mentorNameInUpcomingAppointmentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="Mentor Name"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toBottomOf="@+id/imageInUpcomingAppointmentCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageInUpcomingAppointmentCard"
            app:layout_constraintTop_toTopOf="@+id/imageInUpcomingAppointmentCard" />

        <LinearLayout
            android:id="@+id/appointmentDateLayoutInUpcomingAppointmentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/mentorNameInUpcomingAppointmentCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mentorNameInUpcomingAppointmentCard"
            app:layout_constraintTop_toTopOf="@+id/mentorNameInUpcomingAppointmentCard">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semibold"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31-08-2023"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/dateOfAppointmentInUpcomingAppointmentCard"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayoutInUpcomingAppointmentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageInUpcomingAppointmentCard"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toEndOf="@+id/imageInUpcomingAppointmentCard"
            app:layout_constraintTop_toTopOf="@+id/imageInUpcomingAppointmentCard"
            app:layout_constraintVertical_bias="0.962"
            app:layout_constraintWidth_percent="0.3">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Time:   "
                android:textColor="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/timeOfAppointmentInUpcomingAppointmentCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="9-10"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/mentorNameInUpcomingAppointmentCard"
                app:layout_constraintTop_toBottomOf="@id/timeOfAppointmentInUpcomingAppointmentCard"
                app:layout_constraintVertical_bias="0.02" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/timeLayoutInUpcomingAppointmentCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.901"
            app:layout_constraintStart_toStartOf="@id/mentorNameInUpcomingAppointmentCard"
            app:layout_constraintTop_toTopOf="@+id/timeLayoutInUpcomingAppointmentCard"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.35">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Type:   "
                android:textColor="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phoneInMentorCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Career"
                android:textColor="@color/black" />


        </LinearLayout>



        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/deleteAppointmentInUpcomingAppointmentCard"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.4"
            android:text="Reschedule"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            android:id="@+id/rescheduleButtonInUpcomingCard"
            android:letterSpacing="0"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.1"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/rescheduleButtonInUpcomingCard"
            app:layout_constraintBottom_toBottomOf="@id/rescheduleButtonInUpcomingCard"
            app:layout_constraintStart_toEndOf="@id/rescheduleButtonInUpcomingCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.4"
            android:text="Delete"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/baby_blue"
            android:textColor="@color/black"
            android:id="@+id/deleteAppointmentInUpcomingAppointmentCard"
            android:textAllCaps="false"
            android:letterSpacing="0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>